---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import FeaturesClickable from '~/components/widgets/FeaturesClickable.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Law Firm SEO System | Chicago Legal Web Studio',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Predictable Intake"
    title="SEO + intake system built for law firms"
    subtitle="Lawyers don't buy backlinks - they buy better cases. Our framework turns Google into a steady flow of qualified inquiries without paid ads."
    actions={[{ variant: 'primary', target: '_blank', text: 'Book intro call', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=crop&w=1500&q=80',
      alt: 'Attorney reviewing analytics',
    }}
  />

  <FeaturesClickable
    title="System modules"
    subtitle="Every engagement plugs into these three levers"
    columns={3}
    items={[
      {
        title: 'Authority Build',
        description:
          'Entity audits, topical maps, and review velocity to make Google trust you as the go-to firm.',
        icon: 'tabler:award',
        secondaryIcon: 'tabler:arrow-right',
        href: '/law-firm-seo/authority-build',
      },
      {
        title: 'Search Visibility',
        description:
          'Content sprints, schema, and GBP operations so you dominate organic + map pack results.',
        icon: 'tabler:chart-dots',
        secondaryIcon: 'tabler:arrow-right',
        href: '/law-firm-seo/search-visibility',
      },
      {
        title: 'Intake Ops',
        description:
          'Tracking, call scoring, and AI-enabled intake flows to turn clicks into signed retainers.',
        icon: 'tabler:phone-check',
        secondaryIcon: 'tabler:arrow-right',
        href: '/law-firm-seo/intake-ops',
      },
    ]}
  />

  <Content
    isReversed
    title="What's inside the system"
    tagline="Strategist-led, data-backed"
    items={[
      {
        title: 'Technical + entity audits',
        description: 'We fix crawl issues, schema, internal linking, and brand/entity signals for Google.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Topic & content ops',
        description: 'Editorial calendars tied to practice areas, verdicts, and trending local queries.',
        icon: 'tabler:writing',
      },
      {
        title: 'Link acquisition',
        description: 'Digital PR, legal directories, and partnership plays that pass trust - never spam.',
        icon: 'tabler:link',
      },
      {
        title: 'Analytics + intake reporting',
        description: 'Dashboards show which queries, pages, and ads drive signed cases, not just clicks.',
        icon: 'tabler:report-money',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?auto=format&fit=crop&w=1100&q=80',
      alt: 'SEO strategist working on laptop',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Strategy > services
      </h3>
      <p>
        We lead with diagnostics and offer design, not laundry lists. You'll know exactly how each sprint ties to intake targets.
      </p>
    </Fragment>
  </Content>

  <Content
    isAfterContent
    items={[
      {
        title: 'Faster feedback loops',
        description: 'Weekly scorecards and Loom updates keep you in the loop without meetings.',
        icon: 'tabler:clock',
      },
      {
        title: 'Case-quality focus',
        description: 'Intake scoring helps us optimize for profitable matters, not vanity traffic.',
        icon: 'tabler:scale',
      },
      {
        title: 'Transparent pricing',
        description: 'Flat monthly engagements with the option to add launch sprints when you expand.',
        icon: 'tabler:currency-dollar',
      },
      {
        title: 'Chicago & beyond',
        description: 'Local-first tactics for Cook County + statewide campaigns when youre ready to scale.',
        icon: 'tabler:map',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1474631245212-32dc3c8310c6?auto=format&fit=crop&w=900&q=80',
      alt: 'Team collaborating over reports',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Outcomes clients care about
      </h3>
    </Fragment>
  </Content>

  <Testimonials
    title="Law firms seeing consistent growth"
    testimonials={[
      {
        testimonial:
          'Map pack dominance in three neighborhoods and a 58% lift in form submissions within 90 days. We can predict intake again.',
        name: 'Omar Wright',
        job: 'Managing Attorney, Wright & Cole',
        image: {
          src: 'https://images.unsplash.com/photo-1504593811423-6dd665756598?auto=format&fit=crop&w=200&q=80',
          alt: 'Omar Wright headshot',
        },
      },
      {
        testimonial:
          'They speak in business outcomes, not jargon. Intake recordings + Search Console dashboards make ROI obvious.',
        name: 'Stephanie Lewis',
        job: 'Partner, Lewis Family Law',
        image: {
          src: 'https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?auto=format&fit=crop&w=200&q=80',
          alt: 'Stephanie Lewis headshot',
        },
      },
      {
        testimonial:
          'Our Spanish practice now ranks citywide. The team adapted content and intake scripts so quality stayed high.',
        name: 'Carlos Jimenez',
        job: 'Founder, Jimenez Immigration',
        image: {
          src: 'https://images.unsplash.com/photo-1500648767791-00dcc994a43e?auto=format&fit=crop&w=200&q=80',
          alt: 'Carlos Jimenez headshot',
        },
      },
    ]}
    callToAction={{
      target: '_blank',
      text: 'View website services',
      href: '/law-firm-websites',
      icon: 'tabler:chevron-right',
    }}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Request the SEO diagnostic',
        href: '/contact',
      },
    ]}
  >
    <Fragment slot="title">
      Let's design your predictable client engine
    </Fragment>

    <Fragment slot="subtitle">
      Send us your current metrics, target practice areas, and competitors. We'll respond with next steps within one business day.
    </Fragment>
  </CallToAction>
</Layout>
