---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import FeaturesClickable from '~/components/widgets/FeaturesClickable.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <!-- ContactUs Widget *************** -->
  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="Write to us for quick answers or free consultations. Our support team is delighted to help you."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

 
  <FeaturesClickable
    title="We are here to help!"
    items={[
      {
        title: 'Phone',
        description: '+1 (312) 777-0147',
        icon: 'tabler:phone',
        href: 'tel:+13127770147',
      },
      {
        title: 'Email',
        description: 'hello@chicagolegalsystems.com',
        icon: 'tabler:mail',
        href: 'mailto:hello@chicagolegalsystems.com',
      },
      {
        title: 'Studio',
        description: '433 W Van Buren St, Suite 1100S, Chicago, IL 60607',
        icon: 'tabler:map-pin',
        href: 'https://maps.google.com/?q=433+W+Van+Buren+St,+Chicago,+IL+60607',
        target: '_blank',
        rel: 'noopener noreferrer',
      },
    ]}
  />
</Layout>
