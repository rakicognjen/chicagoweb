---
import Layout from '~/layouts/PageLayout.astro';
import ProductDetail from '~/components/widgets/ProductDetail.astro';  // import new component


const metadata = {
  title: 'Sales Landing Page Demo',
};
---

<Layout metadata={metadata}>
  <!-- Use ProductDetail instead of Hero2 -->

  <ProductDetail
      tagline="Durable and Elegant"
      title="Timber Beams"
      specs={`
        <tr><td><strong>Material</strong></td><td>100% Natural Hardwood</td></tr>
        <tr><td><strong>Finish</strong></td><td>Matte, Glossy, or Satin Options</td></tr>
        <tr><td><strong>Plank Size</strong></td><td>Standard: 5" - 7" width, 12" - 84" length</td></tr>
        <tr><td><strong>Thickness</strong></td><td>3/4 inch (19mm)</td></tr>
        <tr><td><strong>Warranty</strong></td><td>25 Years Residential</td></tr>
        <tr><td><strong>Installation</strong></td><td>Nail-down, Glue-down, or Floating</td></tr>
        <tr><td><strong>Price</strong></td><td>Starting at $6 per sq.ft.</td></tr>
      `}
    actions={[
      { variant: 'primary', text: 'Get Free Quote', href: '/contact', icon: 'tabler:square-rounded-arrow-right' },

    ]}
    images={[
      {
        src: 'https://images.unsplash.com/photo-1702197573571-3c29c5b181be?q=80&w=1074&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
        alt: 'Children telling a story. Long-form Sales Landing Page demo',
      },
      {
        src: 'https://images.unsplash.com/photo-1569398953031-b2eacfe315b6?q=80&w=1935&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
        alt: 'Another slide image',
      },
    ]}
  />


  

</Layout>
