---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import Image from '~/components/common/Image.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 2,
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline as Record<string, string>} />

  <div class={`grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-${columns}`}>
    {items.map((item) => (
      <a 
        href={item.href} 
        class="block rounded-2xl shadow-md hover:shadow-xl transition overflow-hidden bg-white dark:bg-gray-900"
      >
        <Image 
          src={item.image?.src} 
          alt={item.image?.alt ?? item.title} 
          class="w-full h-48 object-cover" 
          loading="lazy" 
        />
        <div class="p-4">
          <h3 class="text-lg font-semibold mb-1 text-gray-900 dark:text-white">{item.title}</h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">{item.description}</p>
        </div>
      </a>
    ))}
  </div>
</WidgetWrapper>
